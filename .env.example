# Binance API
BINANCE_API_KEY=your_api_key_here
BINANCE_API_SECRET=your_api_secret_here

# Trading Config
SYMBOL=BTCUSDT
TIMEFRAME=15m
LEVERAGE=25
POSITION_SIZE_USDT=5000

# MA Periods
MA_FAST=7
MA_MID=25
MA_SLOW=99

# Risk Management
MAX_DRAWDOWN_PCT=20
